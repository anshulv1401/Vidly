@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Customer.Name</h2>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.Name)
    @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(m => m.Customer.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.MembershipTypeId)
    @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "-Select-", new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(m => m.Customer.MembershipTypeId)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.BirthDate)
    @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control", @readonly = "readonly" })
    @Html.ValidationMessageFor(m => m.Customer.BirthDate)
</div>
<div class="custom-checkbox ">
    <label>
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter, new { @disabled = "disabled" }) Subscribed to Newsletter?
    </label>
</div>